<script>
  document.addEventListener("DOMContentLoaded", function () {
    const form = document.getElementById("jobseekerForm");

    form.addEventListener("submit", async function (event) {
      event.preventDefault(); // Prevent default form submission

      const formData = new FormData(form); // Create FormData object for file upload

      try {
        const response = await fetch("/jobseekerregister", {
          method: "POST",
          body: formData, // Send form data directly
        });

        const data = await response.json();

        if (response.ok) {
          alert(data.message); // Show success message
          window.location.href = data.redirect; // Redirect to the specified page
        } else {
          alert(data.message); // Show error message
        }
      } catch (error) {
        console.error("Error submitting form:", error);
        alert("An error occurred. Please try again.");
      }
    });
  });
</script>
