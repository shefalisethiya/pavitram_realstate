                    <option value="experienced">
                      I'm experienced (excluding internships)
                    </option>
                    <option value="fresher">
                      I'm a fresher (Haven't worked after graduation)
                    </option>
                  </select>
                </div>
                <div class="col-12 mb-3">
                  <label>Upload Resume</label>
                  <input
                    type="file"
                    name="resume"
                    class="form-control"
                    accept=".pdf,.doc,.docx"
                    required
                  />
                </div>
                <div class="col-12">
                  <input
                    type="submit"
                    value="Register"
                    class="btn btn-primary"
                  />
                </div>
