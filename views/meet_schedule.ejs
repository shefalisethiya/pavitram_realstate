<script>
    async function fetchAgentName() {
        const pname = document.getElementById("pname").value.trim();
        if (!pname) return; // Exit if pname is empty
    
        try {
            const response = await fetch(`http://localhost:8085/get-agent?pname=${pname}`);
            const result = await response.json();
    
            if (response.ok && result.agentName) {
                document.getElementById("aname").value = result.agentName;
                console.log("✅ Agent Name Retrieved:", result.agentName);
            } else {
                document.getElementById("aname").value = "";
                alert("⚠️ No agent found for this property.");
            }
        } catch (error) {
            console.error("❌ Error fetching agent name:", error);
        }
    }
    
    async function schedule() {
        const name = document.getElementById("name").value.trim();
        const email = document.getElementById("email").value.trim();
        const pname = document.getElementById("pname").value.trim();
        const aname = document.getElementById("aname").value.trim();
        const meetDate = document.getElementById("meetDate").value;
        const meetTime = document.getElementById("meetTime").value;
    
        console.log("🟢 Data before sending:", { name, email, pname, aname, meetDate, meetTime });
    
        if (!name || !email || !pname || !aname || !meetDate || !meetTime) {
            alert("❌ Please fill in all fields.");
            return;
        }
    
        const meetingData = { name, email, pname, aname, meetDate, meetTime };
    
        try {
            const response = await fetch("http://localhost:8085/meetings", {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify(meetingData),
            });
    
            const result = await response.json();
            console.log("🔵 Server Response:", result);
    
            if (response.ok) {
                alert("✅ Meeting scheduled successfully!");
                document.getElementById("meetScheduleForm").reset();
            } else {
                alert(`❌ Error: ${result.message}`);
            }
        } catch (error) {
            alert("❌ Failed to schedule meeting. Please try again.");
            console.error(error);
        }
    }
    </script>
  